<div class="eaa_social">
  <div class="social_container">
    <h3 class="social_title">{{ section.settings.heading }}</h3>
    <p class="social_name">{{ section.settings['social-name'] }}</p>
    <div class="social_img">
      {% for block in section.blocks %}
        <div class="app_img">
          <img
            srcset="
              {%- if block.settings.image.width >= 165 -%}{{ block.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
              {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
              {%- if block.settings.image.width >= 533 -%}{{ block.settings.image | image_url: width: 533 }} 533w,{%- endif -%}
              {%- if block.settings.image.width >= 720 -%}{{ block.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
              {{ block.settings.image | image_url }} {{ block.settings.image }}w
            "
            src="{{ block.settings.image | image_url: width: 720 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 120 | divided_by: 3 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
            alt=""
            class="motion-reduce"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
   $(document).ready(function() {
     var windowsize = $(window).width();


      $(window).resize(function() {
        var windowsize = $(window).width();
      });


      if (windowsize > 769) {
       $('.social_img').slick({
          infinite: true,
          slidesToShow: 4,
          slidesToScroll: 1,
          centerMode: true,  
        });
      }
   
    });


    
</script>

<style>
  .eaa_social{
    padding-top: {{section.settings.padding_top}}px;
    padding-bottom: {{section.settings.padding_bottom}}px;
  }
   
  .social_title {
    font-style: normal;
    font-weight: 700;
    font-size: 18px;
    line-height: 25px;
    text-align: left;
    margin: 0 0 15px 80px;
    color: #001E51;
}
  .social_name {
    font-weight: 400;
    font-size: 14px;
    line-height: 21px;
    letter-spacing: 0.03em;
    text-align: center;
    margin: 0 0 50px 0;
  }
  .app_img img {
    width: 100%;
    height: 100%;
  }
  .app_img {
    margin: 0 15px 0 0;
  }
  .app_img:last-child {
    margin: 0;
  }
  .social_container {
    padding: 0 16px;
  }
  @media screen and (max-width:749px){
    .social_title {
      font-size: 28px;
      line-height: 85%;
    }
    .social_name {
      font-size: 12px;
      line-height: 18px;
      margin: 0 0 25px 0;
    }
    .social_img {
      flex-wrap: wrap;
      margin: 0 -5px;
      display: flex;
    }
    .app_img {
      margin: 0;
      width: 50%;
      padding: 5px;
    }
    .eaa_social{
      padding-top: {{section.settings.mob_padding_top}}px;
      padding-bottom: {{section.settings.mob_padding_bottom}}px;
    }
  }
  @media screen and (max-width:749px){
    .social_title {
      font-size: 16px;
      margin: 0 0 15px 16px;
    }
  }
</style>

