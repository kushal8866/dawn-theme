<div class="product-accordion">
  <h4 class="product-title animatable fadeIn ">{{ section.settings.heading }}</h4>
  <div class="container">
    <div class="product-questions">
      <div class="accordion-container">
        {% for block in section.blocks %}
          <div class="accordion animatable fadeIn">
            {% if forloop.first == true %}
              <div class="accordion-head  active">
                <p>{{ block.settings.accordion-title }}</p>
                <svg width="16" height="14" viewBox="0 0 16 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8 10.1213L14 3.62134" stroke="#001E51" stroke-width="1.25" stroke-linecap="square"/>
                  <path d="M8 10.1213L2 3.62134" stroke="#001E51" stroke-width="1.25" stroke-linecap="square"/>
                </svg>

              </div>
              <div class="accordion-content accordion-content-{{ section.id }}">
                {{ block.settings.description }}
              </div>
            {% else %}
              <div class="accordion-head ">
                <p>{{ block.settings.accordion-title }}</p>
                <svg width="16" height="14" viewBox="0 0 16 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8 10.1213L14 3.62134" stroke="#001E51" stroke-width="1.25" stroke-linecap="square"/>
                  <path d="M8 10.1213L2 3.62134" stroke="#001E51" stroke-width="1.25" stroke-linecap="square"/>
                </svg>
              </div>
              <div class="accordion-content accordion-content-{{ section.id }}">
                {{ block.settings.description }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
       $('.accordion-container .accordion:nth-child(1) .accordion-head').addClass('active');
        $('.accordion-container .accordion .accordion-content').slideUp();
        $('.accordion-container .accordion:nth-child(1) .accordion-content').slideDown();
        $('.accordion-head').on('click', function() {
           if($(this).hasClass('active')) {
           $(this).siblings('.accordion-content').slideUp();
           $(this).removeClass('active');
        }
         else {
           $('.accordion-content').slideUp();
           $('.accordion-head').removeClass('active');
           $(this).siblings('.accordion-content').slideToggle();
           $(this).toggleClass('active');
        }
     })
  });
</script>

<style>
  .product-accordion{
  padding-top:{{section.settings.padding_top}}px;
  padding-bottom:{{section.settings.padding_bottom}}px;
}
  .accordion-head p {
    font-size: 20px;
    color: #001E51;
    font-weight: 700;
    margin: 24px 0 16px;
}
  .accordion-content {
    font-size: 15px;
    color: #211E1E;
    margin-bottom: 25px;
}
  .accordion-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
  .accordion-head.active svg {
    transform: rotate(180deg);
}
</style>

