
<style>
  .image_with-content {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
</style>


<div class="image_with-content">
  <div class="bg_img_text">
   {% for block in section.blocks %} 
    <div class="image_content_box">
      <div class="content_img">
        <img src="{{ block.settings.image | img_url: 'master' }}" loading="lazy" alt="">
      </div>
      <div class="image_content">
        <h3 class="content_heading">{{ block.settings.title }}</h3>
        <p class="content_disc">{{ block.settings.discription }}</p>
        <a href="{{ block.settings.link }}" class="more_content">{{ block.settings.btn_text }}</a>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "image with content",
    "settings": [
        {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "blocks":[
      {
        "type": "image_content",
        "name": "image with content",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "discription",
            "label": "Discription"
          },
          {
            "type": "text",
            "id": "btn_text",
            "label": "Link Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets":[
      {
        "name": "image with content"
      }
    ]
  }
{% endschema %}

